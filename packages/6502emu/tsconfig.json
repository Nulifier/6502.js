{
	"compilerOptions": {
		"target": "ES2022",
		"module": "Preserve",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"lib": ["ES2023"],
		"moduleResolution": "Node",
		"outDir": "dist",
		"importsNotUsedAsValues": "remove",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["vitest/globals"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "src/**/*.test.ts"]
}
